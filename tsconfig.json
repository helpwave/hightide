{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src",
    "stories",
  ],
  "exclude": [
    "src/storybook",
    "dist",
    "node_modules"
  ]
}
